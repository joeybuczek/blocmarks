<div class="row">
  <div class="col-md-12">

    <h1 class="nudge-up-10">Bookmarks by Topic</h1>

    <% @topics.each do |topic| %>
      <div class="list-group">  
        <h4 class="list-group-item list-group-item-info">
          <%= topic.title %>
          <%= link_to "", topic, method: :delete, class: 'glyphicon glyphicon-remove-circle remove-color', data: { confirm: "Are you sure you want to remove #{topic.title}?" } %>
        </h4>
        <div class="list-group-item">
          <% topic.bookmarks.each_with_index do |bookmark, index| %>
            <% unless index >= topic.bookmarks.count %>
              <p>
                <%= link_to bookmark.url, bookmark.url, target: "_blank", class: 'margin-left-10' %>
                <%= link_to "", bookmark, method: :delete, class: 'glyphicon glyphicon-remove-circle remove-color', data: { confirm: "Are you sure you want to remove #{bookmark.url}?" } %>
              </p>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>

  </div>
</div>